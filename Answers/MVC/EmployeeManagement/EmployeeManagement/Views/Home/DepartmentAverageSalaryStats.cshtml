@model IEnumerable<Application.Models.DepartmentAverageSalaryStatsDto>



<input type="button" value="Export" onclick="location.href='@Url.Action("Export", "Home",new { fileName = "DepartmentAverageSalaryStatsDto"})'" />


<table class="table">
    <thead>
        <tr>
            <th>
                Department
            </th>
            <th>
                Average Salary
            </th>
            <th>
                Employee Count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeCount)
                </td>
            </tr>
        }
    </tbody>
</table>
