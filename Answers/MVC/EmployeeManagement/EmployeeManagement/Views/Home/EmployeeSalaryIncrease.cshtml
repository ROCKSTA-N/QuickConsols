@model IEnumerable<Application.Models.EmployeeSalaryIncreaseDto>

<input type="button" value="Export" onclick="location.href='@Url.Action("Export", "Home",new { fileName = "EmployeeSalaryIncrease"})'" />


<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Department
            </th>
            <th>
                Salary
            </th>
            <th>
                salary + 10% increase
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Increase)
                </td>
            </tr>
        }
    </tbody>
</table>
